 * 
 */
package levenshtein;

/**
 * @author UO285176
 *
 */
public class Levenshtein {
	int [][] d;
	String[] cad1;
	String[] cad2;
	public int distanciaLevenshtein(String cad1, String cad2) {
		this.cad1 = cad1.split("");//se separa letra a letra
		this.cad2 = cad2.split("");
		for(int i = 0; i < cad1.length(); i++) {
			for(int j = 0; j < cad2.length(); j++) {
				if(this.cad1[i] == this.cad2[j])
					d[i][j] = d[i-1][j-1];
				d[i][j] = 1+Math.min(d[i-1][j-1], d[i][j-1], d[i-1][j]);
			}
		}
	}
}
